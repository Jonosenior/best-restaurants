<head>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["GOOGLE_API_KEY"]%>&libraries=places"></script>
</head>

<div class="container" id="form_container">
  <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1><%= form_type %> Restaurant</h1><br>
          <%= form_for(@restaurant) do |f| %>
            <%= f.text_field :address, id: "address", placeholder: "Address", class: "form-control input-sm chat-input"%><br>

            <%= f.text_field :name, placeholder: "Name", class: "form-control input-sm chat-input"%><br>

            <%= f.text_field :cuisine, placeholder: "Cuisine", class: "form-control input-sm chat-input" %><br>

            <%= f.text_area :description, placeholder: "Description", class: "form-control input-lg chat-input"%><br>

            <%= f.submit "Submit", class: "btn btn-primary btn-md" %>

          <% end %>
      </div>
    </div>
</div>

<script>
  function initialize() {
    var input = document.getElementById('address');
    new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', initialize);

</script>
